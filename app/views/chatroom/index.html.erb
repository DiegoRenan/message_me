<h1>Chatroom</h1>

<div class="container" id="chat">
  <ul id="message-container">
    <%= render @messages %>
  </ul>
</div>

<hr class="solid">

<p>
<%= form_with(model: @message, url: messages_path, remote: true) do |form| %>
  <div>
    <%= form.label :username, "You: " %>
    <%= form.text_field :body %>
  </div>

  <%= form.submit %>
<% end %>
</div>
</p>