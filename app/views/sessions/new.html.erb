<h1>Login</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
  <div>
    <%= form.label :username %><br />
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password %><br />
    <%= form.password_field :password %>
  </div>

  <%= form.submit %>
<% end %>
